<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="text-center">
                <div class="presentation">
                    <h2>ADMIN {{admin.name}}</h2>
                    </br>
                    <h5>COMPRAS</h5>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <table class="display table-hover table-responsive" id="table_id">
                <thead>
                    <tr>

                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Valor Total</th>
                        <th></th>

                    </tr>

                </thead>
                <tbody>


                    {{#each purchases}}


                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>{{date}}</td>
                        <td>{{totalValue}}</td>

                        <td>
                            <a href="/admin/contact/{{email}}" title="email" class="text-decoration-none">

                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-envelope-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555zM0 4.697v7.104l5.803-3.558L0 4.697zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757zm3.436-.586L16 11.801V4.697l-5.803 3.546z" />
                                </svg>
                            </a>

                        </td>
                    </tr>

                    {{/each}}

                </tbody>
                <tfoot>

                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Valor Total</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
    <div class="container p-5">
        <div class="row">
            <div class="mx-auto">
                <h3>Total de compras por Cliente</h3>
            </div>

            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mx-auto">
                <table class="display table-hover table-responsive" id="table_id2">
                    <thead>
                        <tr>

                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Valor Total</th>
                            <th></th>

                        </tr>

                    </thead>
                    <tbody>


                        {{#each purchasesByClient}}


                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{Total}}</td>

                            <td>
                                <a href="/admin/contact/{{email}}" title="email" class="text-decoration-none">

                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-envelope-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555zM0 4.697v7.104l5.803-3.558L0 4.697zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757zm3.436-.586L16 11.801V4.697l-5.803 3.546z" />
                                    </svg>
                                </a>

                            </td>
                        </tr>

                        {{/each}}

                    </tbody>
                    <tfoot>

                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Valor Total</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
